
@model MVC.Models.Event

        <div class="border p-3">
            <div class="form-group row">
                <h2 class="text-black-50 pl-3">Details of the Event </h2>
            </div>


            <div class="form-group row">
                <div class="col-8 text-center row">

                    <div class="row">
                        <!--<div class="col-6">-->
                        <div class="form-group col-4">
                            <div class="row-4 mb-2">
                                <label asp-for="Title"></label>
                            </div>
                        </div>
                        <div class="form-group col-8">
                            <div class=" row-2 mb-2">
                                <input asp-for="Title" class="form-control" readonly/>
                            </div>
                        </div>

                        <div class="form-group col-4">

                            <div class="row-4 mb-2">
                                <label asp-for="Date"></label>
                            </div>
                        </div>
                        <div class="form-group col-8">

                            <div class=" row-2 mb-2">
                                <input asp-for="Date" class="form-control" readonly/>
                            </div>
                        </div>

                        <div class="form-group col-4">

                            <div class="row-4 mb-2">
                                <label asp-for="Location"></label>
                            </div>
                        </div>
                        <div class="form-group col-8">
                            <div class=" row-2 mb-2">
                                <input asp-for="Location" class="form-control" readonly />
                            </div>
                        </div>

                        <div class="form-group col-4">
                            <div class="row-4 mb-2">
                                <label asp-for="StartTime"></label>
                            </div>
                        </div>
                        <div class="form-group col-8">
                            <div class=" row-2 mb-2">
                                <input asp-for="StartTime" class="form-control" readonly />
                            </div>
                        </div>

                        <div class="form-group col-4">

                            <div class="row-4 mb-2">
                                <label asp-for="Type"> </label>
                            </div>
                        </div>
                        <div class="form-group col-8">
                            <div class=" row-2 mb-2">
                                <input asp-for="Type" class="form-control" readonly />
                            </div>
                        </div>

                        <div class="form-group col-4">

                            <div class="row-4 mb-2">
                                <label asp-for="Duration"></label>
                            </div>
                        </div>
                        <div class="form-group col-8">
                            <div class=" row-2 mb-2">
                                <input asp-for="Duration" class="form-control" readonly />
                            </div>
                        </div>

                        <div class="form-group col-4">

                            <div class="row-4 mb-2">
                                <label asp-for="Description"></label>
                            </div>
                        </div>
                        <div class="form-group col-8">
                            <div class=" row-2 mb-2">
                                <input asp-for="Description" class="form-control" readonly />
                            </div>
                        </div>

                        <div class="form-group col-4">

                            <div class="row-4 mb-2">
                                <label asp-for="OtherDetails"></label>
                            </div>
                        </div>
                        <div class="form-group col-8">
                            <div class=" row-2 mb-2">
                                <input asp-for="OtherDetails" class="form-control" readonly />
                            </div>
                        </div>

                        <div class="form-group col-4">

                            <div class="row-4 mb-2">
                                <label asp-for="Invite"></label>
                            </div>
                        </div>
                        <div class="form-group col-8">
                            <div class=" row-2 mb-2">
                                <input asp-for="Invite" class="form-control" readonly/>
                            </div>

                        </div>


                        <div class="col">
                            <a asp-controller="Event" asp-action="Index" class="btn btn-danger w-50">Go Back</a>
                        </div>

                    </div>
                </div>
            </div>
        </div>


